/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.navigator-hover {
  color: blue;
}

.other-navigator-hover {
  color: red;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: #777;
}

.on {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.room_nav {
  height: 100rpx;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.tab-item {
  display: inline-block;
  margin-left: 4px;
  margin-right: 4px;
  font-size: 15px;
  text-align: center;
  width: 22%;
}

.fix-news {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
}

/* 单个模块 */

#drawing {
}

#gate {
}

/* 整体模块样式 */

.room_lump {
  color: #706c5f;
  font-family: Arial, Helvetica, sans-serif;
  margin: 25rpx 0rpx 10rpx 20rpx;
  width: 340rpx;
  height: 148rpx;
  float: left;
  border-radius: 20rpx;
  background-color: #f7f6f1;
}

/* 设置小模块图片样式 */

.room_image {
  width: 95rpx;
  height: 95rpx;
  margin: 15rpx 0 15rpx 15rpx;
  float: left;
  padding-top: 16rpx;
}

.room_text {
  font-size: 27rpx;
  width: 62%;
  height: 39rpx;
  float: left;
  text-align: left;
  font-weight: bolder;
  line-height: 1.5;
  margin-top: 15rpx;
  margin-left: 10rpx;
}

.room_status {
  width: 35%;
  float: left;
  font-size: 20rpx;
  text-align: center;
  color: #bab4a2;
  margin-top: 40rpx;
  margin-right: 28rpx;
  line-height: 1.5;
  height: 23rpx;
}

.room_on {
  width: 56rpx;
  height: 56rpx;
  background-image: url('https://upload-images.jianshu.io/upload_images/15733580-cfbfd6934ff617c2.png?imageMogr2/auto-orient/strip%7CimageView2/2/w/1240');
  background-size: cover;
  float: left;
  margin-top:25rpx;

}

.room_off {
  width: 56rpx;
  height: 56rpx;
  background-image: url('https://upload-images.jianshu.io/upload_images/15733580-3325bc8ccaa47690.png?imageMogr2/auto-orient/strip%7CimageView2/2/w/1240');
  background-size: cover;
  float: left;
  margin-top: 25rpx;
}

.room_onoff {
  width: 50rpx;
  height: 50rpx;
}

.room {
  background-color: #9fd0ee;
}

.roommsg {
  color: #f7f6f1;
  font-size: 20rpx;
  width: 120rpx;
  height: 29rpx;
  border-radius: 20rpx;
  line-height: 1.5;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
  background-color: #b1b1b196;
}

.img-add image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 15rpx;
  right: 2px;
}

.img-add {
  border-top: 1px solid #777;
  margin-top: -4rpx;
}


/*  */

.operating {
  text-align: center;
  position: absolute;
  bottom: 0rpx;
  background-color: #000;
  width: 100%;
}

.operating view {
  border-bottom: 0.5rpx solid #ccc;
  padding: 20rpx 0;
  font-size: 26rpx;
  background-color: #fff;
}

.operating view:first-child {
  background-color: #ccc;
  font-size: 29rpx;
  color: blue;
}

.operating view:last-child {
  /* border-top: 0.5rpx solid #ccc; */
  margin-top: 10rpx;
  margin-bottom: 0rpx;
}

.show {
  display: block !important;
}

.hidden {
  display: none !important;
}

.renamei {
  text-align: center;
  border: 0.2px solid #000;
  width: 66%;
  margin: 0 auto;
  padding: 5rpx;
  color: rgba(0, 0, 255, 0.288);
}
.operating show{
  position: absolute top 50px;
}

/* 整个评分遮罩层 */

/*遮罩层 */  
.shade{   
  width:100%;   
  height:100%;   
  top:0;   
  background:rgba(0,0,0,0.5);   
  overflow: hidden;   
  /*要显示在wrap的上面 */   
  z-index: 1;   
  position: absolute;  
  }   
  
/*显示与隐藏的内容即点击核算后所展示的详细内容 */  
.conts{   
  width: 100%;   
  /* height: 428rpx;    */
  background-color: white;   
  position: fixed;   
  /* top: 636rpx;   
  text-indent: 60rpx;   */
  }  
    
/*显示整个conts */  
.show{   
  display: block;  
  }  
/*隐藏整个conts */  
.hideModal{   
  display: none;  
  }
/*关闭按钮（关闭整个conts） */  
.closeImg{   
  width: 60rpx;   
  height: 60rpx;   
  float: right;   
  position: relative;   
  top: -70rpx;   
  left: 2rpx;   
  background-color: white;   
  border-radius: 50%;  
  }  

  
.touming_top {
  width: 100%;
  height: 900rpx;
  opacity: 0;
  position: fixed;
  bottom: 402rpx;
  z-index: 998;
}

/* 透明遮罩层（下） */

.touming {
  width: 100%;
  height: 101rpx;
  opacity: 0;
  position: fixed;
  bottom: 0rpx;
  z-index: 998;
}

