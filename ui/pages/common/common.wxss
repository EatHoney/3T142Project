/* 整体模块样式 */

.room_lump {
  color: #706c5f;
  font-family: Arial, Helvetica, sans-serif;
  margin: 25rpx 0rpx 10rpx 20rpx;
  width: 340rpx;
  height: 148rpx;
  float: left;
  border-radius: 20rpx;
  background-color: #f7f6f1;
}

/* 设置小模块图片样式 */

.room_image {
  width: 95rpx;
  height: 95rpx;
  margin: 15rpx 0 15rpx 15rpx;
  float: left;
  padding-top: 16rpx;
}

.room_text {
  font-size: 27rpx;
  width: 62%;
  height: 39rpx;
  float: left;
  text-align: left;
  font-weight: bolder;
  line-height: 1.5;
  margin-top: 15rpx;
  margin-left: 10rpx;
}

.room_status {
  width: 35%;
  float: left;
  font-size: 20rpx;
  text-align: center;
  color: #bab4a2;
  margin-top: 15rpx;
  margin-right: 28rpx;
  line-height: 1.5;
  height: 23rpx;
}

.room_onoff {
  float: left;
  margin-top: -6rpx;
}

.room_onoff {
  width: 50rpx;
  height: 50rpx;
}

.room {
  background-color: #9fd0ee;
}

.roommsg {
  color: #f7f6f1;
  font-size: 20rpx;
  width: 120rpx;
  height: 29rpx;
  border-radius: 20rpx;
  line-height: 1.5;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
  background-color: #b1b1b196;
}

.operating {
  text-align: center;
  position: absolute;
  bottom: 0rpx;
  background-color: #000;
  width: 100%;
}

.operating view {
  border-bottom: 0.5rpx solid #ccc;
  padding: 20rpx 0;
  font-size: 26rpx;
  background-color: #fff;
}

.operating view:first-child {
  background-color: #ccc;
  font-size: 29rpx;
  color: blue;
}

.operating view:last-child {
  /* border-top: 0.5rpx solid #ccc; */
  margin-top: 10rpx;
  margin-bottom: 0rpx;
}

.show {
  display: block !important;
}

.hidden {
  display: none !important;
}

.renamei {
  text-align: center;
  border: 0.2px solid #000;
  width: 66%;
  margin: 0 auto;
  padding: 5rpx;
  color: rgba(0, 0, 255, 0.288);
}
.operating show{
  position: absolute top 50px;
}

